    <a href={AuroraCascade} target="_blank">
      <img src={AuroraCascade}>
    </a>
  </div>
  <div class="ARTbrick">
    <a href={CascadesMountains2017} title="Cascades mountains, 2017" target="_blank">
      <img src={CascadesMountains2017} alt="Cascades mountains, 2017">
    </a>
  </div>
