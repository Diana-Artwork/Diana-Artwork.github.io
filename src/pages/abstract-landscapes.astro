  <div class="carousel__track-container">
    <ul class="carousel__track">
      <li class="carousel__slide current-slide">
        <img src={TucsonDay} title="A Tucson Day" alt="A Tucson Day" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={NorthCarolinaHills} title="North Carolina hills" alt="North Carolina hills" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={AuroraCascade} title="Aurora Cascade" alt="Aurora Cascade" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={CascadesMountains2017} title="Cascades mountains, 2017" alt="Cascades mountains, 2017" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={Chelsea2017} title="Chelsea, 2017" alt="Chelsea, 2017" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={DruidLake} alt="Druid Lake" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={BloomingHandMeadow} alt="Blooming Meadow" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={Garden} alt="Garden, 2018" class="carousel__image">
      </li>
      <li class="carousel__slide">
        <img src={ThreeAmaterasuPeaks} title="Three Amaterasu Peaks" alt="Three Amaterasu Peaks" class="carousel__image">
      </li>
    </ul>
  </div>
  <button class="carousel__button carousel__button--right">&#x276f;</button>
  <div class="carousel__nav">
    <button class="carousel__indicator current-slide"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
    <button class="carousel__indicator"></button>
  </div>
</div>
